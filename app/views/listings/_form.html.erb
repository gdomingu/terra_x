<%= form_for(@listing) do |f| %>
  <div class="row">
    <% if @listing.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

        <ul>
        <% @listing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="input-field col s6">
        <select>
          <option value="" disabled selected>Choose your option</option>
          <option value="solar" name='land_type'>Solar</option>
          <option value="wind" name='land_type'>Wind</option>
        </select>
    <label>Land Type</label>
      </div>
       <div class="input-field col s6">
        <%= f.text_field :price, value: nil, class: 'validate' %>
        <%= f.label :price %><br>
      </div>
    </div>
    <div class="row">
       <div class="input-field col s6">
        <%= f.text_field :address_1, class: 'validate' %>
        <%= f.label :address_1 %><br>
      </div>
       <div class="input-field col s6">
        <%= f.text_field :address_2, class: 'validate' %>
        <%= f.label :address_2 %><br>
      </div>
    </div>
    <div class="row">
       <div class="input-field col s4">
        <%= f.text_field :address_city, class: 'validate' %>
        <%= f.label :address_city, "City" %><br>
      </div>
       <div class="input-field col s4">
        <%= f.text_field :address_state, class: 'validate' %>
        <%= f.label :address_state, "State" %><br>
      </div> 
      <div class="input-field col s4">
        <%= f.text_field :address_zip, class: 'validate' %>
        <%= f.label :address_zip, "Zip" %><br>
      </div>
    </div>
    <div class="row">
      <%= f.submit "Submit", class: 'btn waves-effect waves-light' %>
    </div>

<% end %>
